<h1>{{title}}</h1>
<br><br>
<form action="/point-purchase" method="POST" id="payment-form">
  <span class="payment-errors"></span>

  <div class="form-row">
    <label>
      <span>Card Number</span>
      <input type="text" size="20" data-stripe="number" value="4242424242424242" />
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>CVC</span>
      <input type="text" size="4" data-stripe="cvc" value="444" />
    </label>
  </div>

  <div class="form-row">
    <label>
      <span>Expiration (MM/YYYY)</span>
      <input type="text" size="2" data-stripe="exp-month" value="07"/>
    </label>
    <span> / </span>
    <input type="text" size="4" data-stripe="exp-year" value="2017" />
  </div>

	<div class="form-row">
    <label>
      <span>Items</span>
      <select name="points">
      	<option>10</option>
      	<option>20</option>
      	<option>30</option>
      </select>
    </label>
  </div>  

  <button type="submit">Submit Payment</button>
</form>

<script type="text/javascript" src="js/jquery-1.11.3.min.js"></script>
