<h1>{{title}}</h1>
<br><br>
<form action="/point-purchase" method="POST" class="item-form">

	<div class="form-row">
    <label>
      <span>Items</span>
      <div name="item">Shoes</div>
      <div name="cost">5.50</div>
      <div name="desc">Black Shoes</div>
      <input type="hidden" name="item" value="Shoes">Shoes</input>
      <input type="hidden" name="cost" value="5.50">5.50</input>
      <input type="hidden" name="desc" value="Black Shoes">Black Shoes</input>
    </label>
  </div>  

  <button type="submit">Add To Cart</button>
</form>

<script type="text/javascript" src="js/jquery-1.11.3.min.js"></script>
<script type="text/javascript">
  $(document).ready(function() {
    $(document).on("submit", ".item-form", function() {
      var formData = $(this).serializeArray();

      console.log(formData);

      var dataObj = {
        item: formData[0].value,
        cost: formData[1].value,
        desc: formData[2].value
      };

      $.ajax({
        url: "/add-to-cart",
        type: "POST",
        cookies: document.cookie,
        data: dataObj,
        success: function(res) {
          console.log("data sent successfully");
          console.log(res);
        }
      });

      return false;
    });
  });
</script>